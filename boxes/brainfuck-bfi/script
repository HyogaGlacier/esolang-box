#!/bin/sh

if [ "$#" -ne 1 ] || ! [ -e "$1" ]; then
  echo "Usage: $0 <file>" >&2
  exit 1
fi

if [ -e /dev/stdin ]; then
  if [ -z "$STRACE_OUTPUT_PATH" ]; then
    cat - | /bin/bfi "$1"
  else
    cat - | strace -f -q -o "$STRACE_OUTPUT_PATH" -e trace=execve,execveat /bin/bfi "$1"
  fi
else
  if [ -z "$STRACE_OUTPUT_PATH" ]; then
    echo -n "" | /bin/bfi "$1"
  else
    echo -n "" | strace -f -q -o "$STRACE_OUTPUT_PATH" -e trace=execve,execveat /bin/bfi "$1"
  fi
fi
